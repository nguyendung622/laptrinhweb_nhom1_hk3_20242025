@using QLSP.ViewModel
@model ProductViewModel
<h1>Danh sách Sản phẩm</h1>

<form asp-controller="Product" asp-action="Index">
    <div class="mb-3">
        <label class="form-label">Danh mục</label>
        <select id="category" class="form-control">
            <option value="0">Tất cả</option>
            @if (Model.Categories != null)
            {
                foreach(var cat in Model.Categories)
                {
                    <option value="@cat.Id">@cat.Name</option>
                }
            }
        </select>
    </div>
    <div class="d-flex g-3">
        <div class="flex-grow-1 me-3">
            <input type="text" class="form-control" id="keyWord" name="keyWord" placeholder="Nhập từ cần tìm">
        </div>
        <div class="">
            <button type="submit" class="btn btn-info mb-3"><i class="fa-solid fa-magnifying-glass"></i> Tìm kiếm</button>
        </div>
    </div>
</form>

<div class="d-flex justify-content-end mb-3">
    @*<a asp-action="Create" asp-controller="Category" class="btn btn-success me-1"><i class="fa-solid fa-plus"></i> Thêm</a>*@
    <button class="btn btn-primary me-1"><i class="fa fa-file-excel" aria-hidden="true"></i> Import từ Excel</button>
    <button data-bs-toggle="modal" data-bs-target="#addModal" class="btn btn-success"><i class="fa-solid fa-plus"></i> Thêm</button>
</div>

<div id="product">
    <partial name="_List" model="@Model" />
</div>
