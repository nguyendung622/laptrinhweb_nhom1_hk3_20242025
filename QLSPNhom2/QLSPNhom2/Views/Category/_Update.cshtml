@model QLSPNhom2.ViewModel.CategoryViewModel
<!-- Modal Update -->
<div class="modal fade" id="updateModal_@Model.Response.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="Update" asp-controller="Category" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Chỉnh sửa danh mục sản phẩm</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Tên danh mục<span class="text-danger">*</span></label>
                        <input asp-for="Request.Name" value="@Model.Response.Name" required class="form-control" type="text" placeholder="Nhập tên danh mục" />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" asp-for="Request.Id" value="@Model.Response.Id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Bỏ qua</button>
                    <button type="submit" class="btn btn-primary">Đồng ý</button>
                </div>
            </div>
        </form>
    </div>
</div>